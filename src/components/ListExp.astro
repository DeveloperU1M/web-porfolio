---
interface Props {
	title: string;
	body: string;
    date: string;
    urlImg: string;
	// href: string;
}
const {  title ,body, date ,urlImg  } = Astro.props;

---

<li role="article" class="relative pl-8 ">
    <span class="absolute left-0 z-10 flex 
        items-center justify-center size-14 text-white         
        border-solid
        -translate-x-1/2 rounded-full ring-2 ring-white">
      <img src={urlImg} alt="">
    </span>
    <div class="flex flex-col flex-1 gap-0">
      <h4 class="text-base font-medium text-slate-700"> {title} </h4>
      <p class="text-sm text-slate-500">{date}</p>
    </div>
</li>